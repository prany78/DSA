class Solution {
    public static int largest(int[] arr) {
       int i=0;
       int key=-1;
       int n=arr.length;
        while(i<n){
            if(arr[i]>key) key=arr[i];
            i++;
        }
          return key;
        // System.out.println("The largest element of the given array is "+key);
    }
}
