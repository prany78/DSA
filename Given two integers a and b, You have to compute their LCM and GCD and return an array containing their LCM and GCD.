class Solution {
    public static int[] lcmAndGcd(int a, int b) {
        int gcd = gcd(a, b);
        long lcm = (long) a * b / gcd;  

        return new int[]{(int) lcm, gcd};
    }

    private static int gcd(int a, int b) {
        while (b != 0) {
            int temp = b;
            b = a % b;
            a = temp;
        }
        return a;
    }
}
